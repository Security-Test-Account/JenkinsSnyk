node {
    deleteDir()
    dir('dir-name') {
       stage('Checkout') {
                 steps {
                     // Checkout the source code from GitHub
                     git 'https://github.com/Security-Test-Account/JenkinsSnyk.git'
                 }
             }
       stage('Print Directory') {
           steps {
               // Print current working directory
               sh 'pwd'
           }
       }
      stage('Build and Snyk Test') {
           steps {
               // Run Maven build
               sh 'mvn clean package'
               // Run Snyk tests during the build
               sh 'snyk test'
           }
       }
   }
}
